<Window x:Class="TrayMe.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TrayMe.Windows.Views"
        Title="TrayMe"
        Width="900" Height="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded">
    
    <Border Background="{DynamicResource PanelBackground}" 
            CornerRadius="0,0,12,12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            Effect="{DynamicResource DropShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource HeaderBackground}" 
                    CornerRadius="0,0,0,0">
                <Grid Margin="12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Clipboard Tab -->
                    <Button x:Name="ClipboardTabButton" Grid.Column="0" 
                            Style="{StaticResource TabButtonStyle}"
                            Click="ClipboardTab_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Clipboard" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Border Grid.Column="1" Width="1" Background="{DynamicResource DividerBrush}" 
                            Margin="8,0" VerticalAlignment="Stretch"/>
                    
                    <!-- Files Tab -->
                    <Button x:Name="FilesTabButton" Grid.Column="2"
                            Style="{StaticResource TabButtonStyle}"
                            Click="FilesTab_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Files" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Border Grid.Column="3" Width="1" Background="{DynamicResource DividerBrush}" 
                            Margin="8,0" VerticalAlignment="Stretch"/>
                    
                    <!-- Notes Tab -->
                    <Button x:Name="NotesTabButton" Grid.Column="4"
                            Style="{StaticResource TabButtonStyle}"
                            Click="NotesTab_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Notes" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Settings Button -->
                    <Button Grid.Column="5" Style="{StaticResource IconButtonStyle}"
                            Click="Settings_Click" ToolTip="Settings">
                        <TextBlock Text="âš™ï¸" FontSize="16"/>
                    </Button>
                </Grid>
            </Border>
            
            <Border Grid.Row="0" Height="1" Background="{DynamicResource DividerBrush}" 
                    VerticalAlignment="Bottom"/>
            
            <!-- Content Area with Three Panels -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" x:Name="ClipboardColumn"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" x:Name="FilesColumn"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" x:Name="NotesColumn"/>
                </Grid.ColumnDefinitions>
                
                <!-- Clipboard Panel -->
                <views:ClipboardView x:Name="ClipboardPanel" Grid.Column="0"/>
                
                <!-- Divider 1 -->
                <GridSplitter Grid.Column="1" Width="4" 
                              Background="{DynamicResource DividerBrush}"
                              HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                
                <!-- Files Panel -->
                <views:FilesView x:Name="FilesPanel" Grid.Column="2"/>
                
                <!-- Divider 2 -->
                <GridSplitter Grid.Column="3" Width="4" 
                              Background="{DynamicResource DividerBrush}"
                              HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                
                <!-- Notes Panel -->
                <views:NotesView x:Name="NotesPanel" Grid.Column="4"/>
            </Grid>
        </Grid>
    </Border>
</Window>
