<UserControl x:Class="TrayMe.Windows.Views.ClipboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrayMe.Windows.Views">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search Bar -->
        <Border Grid.Row="0" Margin="12" Background="{DynamicResource SearchBoxBackground}" 
                CornerRadius="6" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="14" 
                           VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.6"/>
                
                <TextBox x:Name="SearchBox" Grid.Column="1" 
                         Style="{StaticResource SearchTextBoxStyle}"
                         TextChanged="SearchBox_TextChanged"/>
                
                <Button x:Name="ClearSearchButton" Grid.Column="2" 
                        Style="{StaticResource IconButtonStyle}"
                        Click="ClearSearch_Click" Visibility="Collapsed">
                    <TextBlock Text="âœ•" FontSize="12"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Favorites Section -->
        <Border x:Name="FavoritesSection" Grid.Row="1" Margin="12,0,12,8" 
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Favorites" FontSize="11" FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled"
                              Height="80">
                    <ItemsControl x:Name="FavoritesList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource CardBackground}" 
                                        CornerRadius="6" Margin="0,0,8,0" Width="120" Height="60"
                                        Cursor="Hand" MouseLeftButtonUp="FavoriteCard_Click">
                                    <Grid Margin="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Text="â­" FontSize="10" 
                                                   Foreground="Gold"/>
                                        
                                        <TextBlock Grid.Row="1" Text="{Binding DisplayContent}" 
                                                   FontSize="11" TextTrimming="CharacterEllipsis"
                                                   MaxHeight="30" TextWrapping="Wrap"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
        
        <!-- Clipboard History -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ClipboardList" Margin="8,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ItemBorder" Background="Transparent" 
                                CornerRadius="6" Margin="4,2" Padding="12,8"
                                Cursor="Hand" MouseEnter="ClipboardItem_MouseEnter"
                                MouseLeave="ClipboardItem_MouseLeave"
                                MouseLeftButtonUp="ClipboardItem_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Type Icon -->
                                <TextBlock x:Name="TypeIcon" Grid.Column="0" FontSize="16" 
                                           VerticalAlignment="Center" Margin="0,0,12,0" Width="20"/>
                                
                                <!-- Content -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding DisplayContent}" FontSize="13"
                                               TextTrimming="CharacterEllipsis" MaxHeight="40"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding TimeAgo}" FontSize="10"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                
                                <!-- Actions (visible on hover) -->
                                <StackPanel x:Name="ActionsPanel" Grid.Column="2" 
                                            Orientation="Horizontal" Visibility="Collapsed">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                            Click="ToggleFavorite_Click" ToolTip="Toggle Favorite">
                                        <TextBlock x:Name="FavoriteIcon" FontSize="14"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                            Click="CopyItem_Click" ToolTip="Copy">
                                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                            Click="DeleteItem_Click" ToolTip="Delete">
                                        <TextBlock Text="ðŸ—‘ï¸" FontSize="14"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="Text">
                                <Setter TargetName="TypeIcon" Property="Text" Value="ðŸ“„"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Url">
                                <Setter TargetName="TypeIcon" Property="Text" Value="ðŸ”—"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Code">
                                <Setter TargetName="TypeIcon" Property="Text" Value="ðŸ’»"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Image">
                                <Setter TargetName="TypeIcon" Property="Text" Value="ðŸ–¼ï¸"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                <Setter TargetName="FavoriteIcon" Property="Text" Value="â­"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFavorite}" Value="False">
                                <Setter TargetName="FavoriteIcon" Property="Text" Value="â˜†"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="3" Background="{DynamicResource FooterBackground}" Padding="12,8">
            <Grid>
                <TextBlock x:Name="ItemCountText" Text="0 items" FontSize="11"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>
                
                <Button Content="Clear History" HorizontalAlignment="Right"
                        Style="{StaticResource LinkButtonStyle}" Foreground="Red"
                        Click="ClearHistory_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
