<UserControl x:Class="TrayMe.Windows.Views.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Notes Sidebar -->
        <Grid Grid.Column="0" Background="{DynamicResource SidebarBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Search and New Note -->
            <Grid Grid.Row="0" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchBox" Grid.Column="0"
                         Style="{StaticResource SearchTextBoxStyle}"
                         TextChanged="SearchBox_TextChanged"/>
                
                <Button Grid.Column="1" Style="{StaticResource IconButtonStyle}"
                        Click="NewNote_Click" ToolTip="New Note" Margin="8,0,0,0">
                    <TextBlock Text="âœï¸" FontSize="16"/>
                </Button>
            </Grid>
            
            <!-- Notes List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="NotesList" Margin="4,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="NoteBorder" Background="Transparent" 
                                    CornerRadius="6" Margin="4,2" Padding="8"
                                    Cursor="Hand" MouseLeftButtonUp="NoteItem_Click">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="PinIcon" Text="ðŸ“Œ" FontSize="10" 
                                                   Visibility="Collapsed" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding DisplayTitle}" FontSize="13" 
                                                   FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding Preview}" FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               TextTrimming="CharacterEllipsis" MaxHeight="32"
                                               TextWrapping="Wrap" Margin="0,4,0,0"
                                               Visibility="{Binding Content, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    
                                    <TextBlock Text="{Binding ModifiedTimeAgo}" FontSize="10"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                    <Setter TargetName="PinIcon" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        
        <!-- Divider -->
        <Border Grid.Column="1" Width="1" Background="{DynamicResource DividerBrush}"/>
        
        <!-- Note Editor -->
        <Grid Grid.Column="2" x:Name="EditorPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <TextBox x:Name="TitleBox" Grid.Row="0" 
                     Style="{StaticResource TitleTextBoxStyle}"
                     TextChanged="TitleBox_TextChanged"/>
            
            <Border Grid.Row="0" Height="1" Background="{DynamicResource DividerBrush}"
                    VerticalAlignment="Bottom"/>
            
            <!-- Content Editor -->
            <TextBox x:Name="ContentBox" Grid.Row="1" 
                     Style="{StaticResource ContentTextBoxStyle}"
                     TextChanged="ContentBox_TextChanged"
                     AcceptsReturn="True" AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"/>
            
            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource FooterBackground}" Padding="12,8">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="PinButton" Style="{StaticResource LinkButtonStyle}"
                                Click="TogglePin_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="PinButtonIcon" Text="ðŸ“Œ" FontSize="11" Margin="0,0,4,0"/>
                                <TextBlock x:Name="PinButtonText" Text="Pin" FontSize="11"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <TextBlock x:Name="ModifiedText" Text="Modified: just now" FontSize="10"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <Button Style="{StaticResource IconButtonStyle}"
                            HorizontalAlignment="Right" Click="DeleteNote_Click"
                            ToolTip="Delete Note">
                        <TextBlock Text="ðŸ—‘ï¸" FontSize="14" Foreground="Red"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Empty State -->
            <StackPanel x:Name="EmptyState" Grid.RowSpan="3" Visibility="Collapsed"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center" Opacity="0.6"/>
                <TextBlock Text="No note selected" FontSize="16" 
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           HorizontalAlignment="Center" Margin="0,12,0,0"/>
                <Button Content="Create New Note" Margin="0,16,0,0"
                        Click="NewNote_Click" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
